<h1>Your Events</h1>

<% if @events.any? %>
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to event.name, event_path(event), class: "text-decoration-none event-link" %></h5>
            <p class="card-text font-weight-bold">Date: <%= event.date %></p>
            <p class="card-text font-weight-bold">Event Code: <%= event.code %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No events found.</p>
<% end %>

<%= link_to 'Create Event', new_event_path, class: 'btn btn-primary' %>
