<div class="container my-3">
  <div class="row">
    <div class="col-lg-6">
      <h1 class="mb-4"> <%= @gift.name %>  </h1>
      <div class="card mb-4">
        <% if @gift.photo.attached? %>
          <%= image_tag @gift.photo, class: "card-img-top p-5" %>
        <% else %>
          <%= image_tag "logo.png", class: "card-img-top" %>
        <% end %>
        <p class="lead mx-3"> <%= @gift.description %></p>
        <div class="container mx-3 my-3">
          <h5 class="card-title">Price: $ <%= @gift.price %>0 </h5>
          <%= link_to 'Buy', new_event_gift_purchase_path(@event, @gift), class: 'btn btn-primary' %>
          <% if policy(@gift).edit? %>
            <%= link_to 'Edit', edit_event_gift_path(@event, @gift), class: 'btn btn-primary' %>
          <% end %>
          <% if policy(@gift).destroy? %>
            <%= link_to 'Delete', event_gift_destroy_path(@event, @gift), class: 'btn btn-danger', data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this gift?"} %>
          <% end %>
        </div>
    </div>
  </div>
</div>
